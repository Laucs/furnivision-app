                            android:layout_height="25dp"
                            android:background="@color/white"
                            android:src="@drawable/ic_yellow_cart_foreground"
                            android:contentDescription="@string/sold_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="250"/>

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/fav1_open"
                        android:tag="openButton"
                        android:layout_width="31dp"
                        android:layout_height="28dp"
                        android:background="@drawable/circle_bg"
                        android:src="@drawable/ic_right_foreground"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="5sp"
                        android:contentDescription="@string/proceed_button" />

