<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nameDeliveryTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:enabled="false"
                android:fontFamily="@font/montserrat"
                android:text="Set Name"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

                <TextView
                    android:id="@+id/phoneDeliveryTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:enabled="false"
                    android:layout_marginStart="50dp"
                    android:fontFamily="@font/montserrat_light"
                    android:text="Set Number"
                    android:textColor="#737373"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

        <TextView
            android:id="@+id/regionTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:enabled="false"
            android:fontFamily="@font/montserrat"
            android:text="Set Region"
            android:textColor="#595959"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/barangayTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/montserrat"
            android:text="Set Barangay"
            android:textColor="#595959"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/streetNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:enabled="false"
            android:fontFamily="@font/montserrat"
            android:text="Set Street"
            android:textColor="#595959"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/postalCodeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:enabled="false"
            android:fontFamily="@font/montserrat"
            android:text="Set Postal Code"
            android:textColor="#595959"
            android:textSize="15sp" />
        <CheckBox
            android:id="@+id/checkbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_gravity="end"
            android:enabled="false"
            android:textColor="@color/primary_darker"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginEnd="20dp"/>
    </LinearLayout>

</LinearLayout>