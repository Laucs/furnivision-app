<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/white"
        android:orientation="vertical">

            <TextView
                android:id="@+id/nameDeliveryTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:enabled="false"
                android:fontFamily="@font/montserrat"
                android:text="Set Name"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:fontFamily="@font/montserrat"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">
            <TextView
                android:id="@+id/PH63"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(+63)"
                android:textColor="#737373"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat"/>
            <TextView
                android:id="@+id/phoneDeliveryTV"
                android:layout_width="match_parent"
                android:fontFamily="@font/montserrat"
                android:layout_height="wrap_content"
                android:text="Enter phone number"
                android:textColor="#737373"
                android:textSize="12sp"
                android:layout_marginStart="10dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/regionTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:enabled="false"
            android:fontFamily="@font/montserrat"
            android:text="Set Region"
            android:textColor="#595959"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/barangayTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/montserrat"
            android:text="Set Barangay"
            android:textColor="#595959"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/streetNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:enabled="false"
            android:fontFamily="@font/montserrat"
            android:text="Set Street"
            android:textColor="#595959"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/postalCodeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:enabled="false"
                android:fontFamily="@font/montserrat"
                android:text="Set Postal Code"
                android:textColor="#595959"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/checkbox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:checked="false"
                android:enabled="false"
                android:layout_alignParentEnd="true"
                android:textColor="@color/primary_darker"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>