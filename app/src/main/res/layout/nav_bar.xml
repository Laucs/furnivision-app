<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:elevation="10dp"
    android:background="@color/white"
    android:padding="6dp"
    >
    <LinearLayout
        android:id="@+id/home_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/shop_menu"
        android:layout_alignBottom="@+id/shop_menu"
        android:orientation="vertical"
        android:layout_marginHorizontal="17dp">

        <ImageView
            android:id="@+id/imgHome"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:src="@drawable/home_logo_outline"
            />

        <TextView
            android:id="@+id/titleHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-7dp"
            android:fontFamily="@font/quicksand"
            android:text="Home"
            android:textSize="12dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/shop_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/try_ar_menu"
        android:layout_alignBottom="@id/try_ar_menu"
        android:orientation="vertical"
        android:layout_marginHorizontal="17dp">

        <ImageView
            android:id="@+id/imgShop"
            android:layout_width="45dp"
            android:layout_height="42dp"
            android:src="@drawable/shop_bag_hollow"
            />

        <TextView
            android:id="@+id/titleShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-6dp"
            android:fontFamily="@font/quicksand"
            android:text="Shop"
            android:textSize="12dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/try_ar_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginHorizontal="17dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/try_ar_logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-10dp"
            android:fontFamily="@font/quicksand"
            android:text="Try AR"
            android:textSize="12dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cart_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/try_ar_menu"
        android:layout_alignBottom="@id/try_ar_menu"
        android:orientation="vertical"
        android:layout_marginHorizontal="17dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/cart_logo"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-10dp"
            android:fontFamily="@font/quicksand"
            android:paddingStart="5dp"
            android:text="Cart"
            android:textSize="12dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/profile_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cart_menu"
        android:layout_alignTop="@id/cart_menu"
        android:layout_alignBottom="@id/cart_menu"
        android:orientation="vertical"
        android:paddingTop="6dp"
        android:layout_marginHorizontal="17dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="33dp"
            android:scaleType="fitCenter"
            android:src="@drawable/profile_logo_outline"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-3dp"
            android:fontFamily="@font/quicksand"
            android:text="Me"
            android:textSize="12dp"
            />

    </LinearLayout>


</RelativeLayout>