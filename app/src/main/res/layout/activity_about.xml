<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4">

    <RelativeLayout
        android:id="@+id/accountHeader"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFF">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:background="@drawable/green_back_button"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/aboutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/backButton"
            android:fontFamily="@font/spartan_medium"
            android:text="About"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </RelativeLayout>
        <LinearLayout
            android:id="@+id/aboutContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_marginTop="150dp">
            <ImageView
                android:id="@+id/furniLogo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="#F4F4F4"
                android:src="@drawable/furni_logo"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:contentDescription="Profile Picture"
                android:outlineProvider="background" />
            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/spartan_medium"
                android:text="Furnivision"
                android:textStyle="bold"
                android:textColor="@color/primary_darker"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/appVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/spartan_medium"
                android:text="v1.0"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

    <Button
        android:id="@+id/clearCacheButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingTop="20dp"
        android:text="Clear Cache"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/primary_darker"
        android:gravity="start"
        android:paddingStart="20dp"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:paddingBottom="20dp"
        android:layout_below="@id/aboutContent">
    </Button>
    <Button
        android:id="@+id/verUpdateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingTop="20dp"
        android:text="Update Version"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/primary_darker"
        android:gravity="start"
        android:paddingStart="20dp"
        android:textAllCaps="false"
        android:layout_marginTop="1dp"
        android:paddingBottom="20dp"
        android:layout_below="@id/clearCacheButton">

    </Button>

</RelativeLayout>