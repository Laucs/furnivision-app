<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    >
    <RelativeLayout
        android:id="@+id/order_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/order_shop_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:contentPadding="3dp"
            app:cardBackgroundColor="@color/primary_darker"
            app:cardCornerRadius="12dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="11dp"
                >
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/sun_gold_logo"
                    />

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/order_shop_logo"
            android:layout_alignBottom="@id/order_shop_logo"
            android:layout_marginVertical="10dp"
            android:paddingVertical="3dp"
            android:paddingStart="75dp"
            android:paddingEnd="20dp"
            android:background="@color/primary_lighter2"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="17sp"
            android:text="@string/sun_gold"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:cardBackgroundColor="@color/primary_darker"
            app:contentPadding="2dp"
            app:cardCornerRadius="25dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/primary_darker"
                app:cardCornerRadius="25dp"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/message_icon"
                    />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/order_furniture_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_header"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/order_furniture_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            app:contentPadding="2dp"
            app:cardBackgroundColor="@color/primary_darker"
            app:cardCornerRadius="12dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="11dp"
                >
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/samplechair"
                    />

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/order_furniture_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/order_furniture_logo"
            android:fontFamily="@font/spartan_extrabold"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="11sp"
            android:text="Lorem Ipsum"
            />
        <TextView
            android:id="@+id/order_furniture_desc"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/order_furniture_title"
            android:layout_toEndOf="@id/order_furniture_logo"
            android:fontFamily="@font/montserrat_light"
            android:textColor="@color/black"
            android:textSize="8sp"
            android:text="@string/sample_text_8_words"
            />


        <TextView
            android:id="@+id/order_furniture_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/spartan_extrabold"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="10sp"
            android:text="â‚± 10,000"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/order_furniture_desc"
            android:layout_alignTop="@id/order_furniture_desc"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/deduct"
                android:scaleType="fitXY"
                android:src="@drawable/deduct_icon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="15dp"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:textSize="11dp"
                android:text="1"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="add"
                android:scaleType="fitXY"
                android:src="@drawable/add_furniture_icon"
                />

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>