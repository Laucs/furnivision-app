<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4">

    <RelativeLayout
        android:id="@+id/accountHeader"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#396057">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:background="@drawable/white_back_button"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/deliveryAddressTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/backButton"
            android:background="#396057"
            android:fontFamily="@font/spartan_medium"
            android:text="Delivery Address"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/currentMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/accountHeader"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="#F4F4F4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Addresses"
            android:textColor="#737373"
            android:textSize="18sp"
            android:paddingTop="10dp"
            android:fontFamily="@font/glacial_indifference_regular"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/cashImage"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameDeliveryTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Name"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:textColor="#595959"
                android:layout_marginStart="20dp"
                android:enabled="false"/>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/PH63"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="(+63)"
                   android:textColor="#737373"
                   android:textSize="15sp"

                   android:fontFamily="@font/montserrat_light"
                   android:textStyle="bold"
                   android:layout_marginStart="20dp" />
               <TextView
                   android:id="@+id/phoneDeliveryTV"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Set Number"
                   android:textColor="#737373"
                   android:textSize="15sp"
                   android:fontFamily="@font/montserrat_light"
                   android:textStyle="bold"
                   android:layout_marginStart="10dp"
                   android:enabled="false"/>

           </LinearLayout>
            <TextView
                android:id="@+id/regionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Region"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat"
                android:textColor="#595959"
                android:layout_marginStart="20dp"
                android:enabled="false"/>
            <TextView
                android:id="@+id/barangayTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Set Barangay"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat"
                android:textColor="#595959"
                android:layout_marginStart="20dp"/>
            <TextView
                android:id="@+id/streetNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Street"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat"
                android:textColor="#595959"
                android:layout_marginStart="20dp"
                android:enabled="false"/>
            <TextView
                android:id="@+id/postalCodeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Postal Code"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat"
                android:textColor="#595959"
                android:layout_marginStart="20dp"
                android:enabled="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="20dp">
            <Button
                android:id="@+id/editDeliveryAddresButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/primary_darker"
                android:fontFamily="@font/spartan_medium"
                android:padding="15dp"
                android:text="Edit"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>