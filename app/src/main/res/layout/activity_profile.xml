<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4">

    <RelativeLayout
        android:id="@+id/accountHeader"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#396057">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/bck_button"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/AccountTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/backButton"
            android:background="#396057"
            android:fontFamily="@font/spartan_medium"
            android:text="Account Information"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/AccountTitle"
            android:background="#396057"
            android:fontFamily="@font/spartan_medium"
            android:text="Edit"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/accountHeader"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:background="#F4F4F4">

        <LinearLayout
            android:id="@+id/nameRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="10dp">

            <TextView
                android:id="@+id/nameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat"
                android:textColor="#737373"
                android:layout_marginStart="15dp"/>

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/montserrat_light"
                android:hint="Set now"
                android:minHeight="48dp"
                android:paddingTop="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/emailRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/emailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat"
                android:textColor="#737373"
                android:layout_marginStart="15dp"/>

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/montserrat_light"
                android:hint="Set now"
                android:minHeight="48dp"
                android:paddingTop="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:inputType="textEmailAddress" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/phoneRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/phoneLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone:"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat"
                android:textColor="#737373"
                android:layout_marginStart="15dp"/>

            <EditText
                android:id="@+id/phoneEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/montserrat_light"
                android:hint="Set now"
                android:minHeight="48dp"
                android:paddingTop="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:inputType="phone" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/passwordRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/passwordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password:"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat"
                android:textColor="#737373"
                android:layout_marginStart="15dp"/>

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat_light"
                android:minHeight="48dp"
                android:paddingTop="10dp"
                android:text="***********"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/changePassButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change"
                android:textColor="@color/primary_darker"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_alignParentEnd="true"
                android:paddingTop="10dp"
                android:layout_marginEnd="20dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dateOfBirthRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/dateOfBirthLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Birth:"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat"
                android:textColor="#737373"
                android:layout_marginStart="15dp"/>

            <EditText
                android:id="@+id/dateOfBirthEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat_light"
                android:hint="Set now"
                android:minHeight="48dp"
                android:paddingTop="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/dateButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/date_button"
                android:contentDescription="Back"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"/>
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:contentDescription="logout"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>